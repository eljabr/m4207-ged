{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
  <h1>upload d'un document</h1>

<form action="/uploadDocument" method="POST">
  <fieldset>
    <legend>Formulaire d'upload de Document</legend>
    <div class="form-group">
      <label for="exampleInputEmail1" class="form-label mt-4">Nom</label>
      <input type="text" name="nom" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Nom du document">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1" class="form-label mt-4">Genre</label>
      <select name="genre"class="form-control">
	  {% for item in genres %}
		<option value={{item.id}}> {{ item.type }}   </option>
		{% endfor %}
	  </select>
    </div>
	<fieldset>
      <legend class="mt-4">Switches</legend>
      <div class="form-check form-switch">
        <input class="form-check-input" name="choixBox" type="checkbox" id="flexSwitchCheckChecked" checked="">
        <label class="form-check-label" for="flexSwitchCheckChecked">Checked switch checkbox input</label>
      </div>
    </fieldset>
	<div class="form-group">
      <label for="exampleInputPassword1" class="form-label mt-4">Utilisateurs</label>
      <select name="user"class="form-control">
	  {% for item in users %}
		<option value={{item.id}}> {{ item.nom }} {{ item.prenom }}  </option>
		{% endfor %}
	  </select>
    </div>
	<button type="submit" class="btn btn-primary">Envoyer</button>
</form>
{% endblock %}